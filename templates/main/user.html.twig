{% extends 'base.html.twig' %}

{% block title %}Amazing user page{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    <h1>Ugly user page</h1>
    <p>proud of our ugliness, since 1991</p>

    <a href="{{path('root')}}" class="button"> Go Back</a>

    <div class="tile">
        <h2>{{user.username}}</h2>
        <p>Name: {{user.name}}</p>
        <p>Email: {{user.email}}</p>
        <p>Address: 
            {{user.address.street}}, 
            {{user.address.suite}}, 
            {{user.address.city}}, 
            {{user.address.zipcode}}, 
        </p>
        <p>Phone: {{user.phone}}</p>
        <p>Website: {{user.website}}</p>
    </div>
{% endblock %}